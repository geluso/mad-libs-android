<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.ga.madlibs.MainActivity" >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:text="Adjective"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/adjective1_edittext"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />
            <TextView
                android:text="Adjective"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/adjective2_edittext"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />
            <TextView
                android:text="Noun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/noun1_edittext"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />
            <TextView
                android:text="Noun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/noun2_edittext"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />
            <TextView
                android:text="Animals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/animals_edittext"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />
            <TextView
                android:text="Game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/game_edittext"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />
            <Button
                android:id="@+id/submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:hint="" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
